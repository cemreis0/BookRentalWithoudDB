@model Student

<h2>Edit Student</h2>

<form method="post" asp-controller="Student" asp-action="Edit" asp-route-id="@Model.ID">
    <divx>
        <label for="ID">ID</label>
        <input type="text" id="ID" value="@Model.ID" readonly />
    </divx>

    <div>
        <label for="Name">Name</label>
        <input type="text" id="Name" name="Name" value="@Model.Name" />
    </div>

    <div>
        <label for="Surname">Surname</label>
        <input type="text" id="Surname" name="Surname" value="@Model.Surname" />
    </div>

    <div>
        <label for="BirthDate">Birth Date</label>
        <input type="date" id="BirthDate" name="BirthDate" value="@Model.BirthDate.ToString("yyyy-MM-dd")" />
    </div>

    <button type="submit">Save Changes</button>
</form>
