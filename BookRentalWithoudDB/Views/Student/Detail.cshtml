@model Student

<table>
    <tr>
        <td width="200">ID</td><td>@Model.ID</td>
    </tr>
    <tr>
        <td width="200">Name</td>
        <td>@Model.Name</td>
    </tr>
    <tr>
        <td width="200">Surname</td>
        <td>@Model.Surname</td>
    </tr>
    <tr>
        <td width="200">Birth Date</td>
        <td>@Model.BirthDate.ToLongDateString()</td>
    </tr>
</table>
<a asp-controller="Student" asp-action="Edit" asp-route-id="@Model.ID"> Edit Student Info </a>
<br/>
<form method="post" asp-controller="Student" asp-action="Delete" asp-route-id="@Model.ID">
    <button type="submit">Delete Student</button>
</form>